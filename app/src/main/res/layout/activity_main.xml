<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="361dp"
        android:layout_height="606dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/Hrly_Rteinput"
            android:layout_width="288dp"
            android:layout_height="48dp"
            android:background="@drawable/bar"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="35dp"

            android:ems="10"
            android:hint="Hourly Rate"
            android:inputType="text"
            android:padding="15dp" />

        <EditText
            android:id="@+id/NoOfhrsinput"
            android:layout_width="288dp"
            android:layout_height="48dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="35dp"
            android:background="@drawable/bar"
            android:ems="10"
            android:hint="No. of Hours"
            android:inputType="text"
            android:padding="15dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="252dp"
            android:layout_height="wrap_content"
            android:onClick="calculation"
            android:background="@drawable/bttn"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/grey"
            android:text="Calculate PAYMENT AND TAX" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/error"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="7dp"
                android:layout_height="40dp"
                android:background="@drawable/bar2"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Payment"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/PaymentOut"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="17dp"
                android:background="@drawable/bar3"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="17dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="7dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/bar2"
                android:gravity="center"
                android:text="Overtime Payment"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/OvertimeOut"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/bar3"
                android:gravity="center"
                android:textSize="17dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/bar2"
                android:text="Tax"
                android:textSize="17dp"/>

            <TextView

                android:id="@+id/TaxOut"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bar3"
                android:gravity="center"
                android:textSize="17dp"
                android:layout_weight="1"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="7dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="TOTAL PAYMENT"
                android:gravity="center"
                android:background="@drawable/bar2"
                android:textSize="17dp"/>

            <TextView
                android:id="@+id/TotalOut"
                android:layout_width="7dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/bar3"
                android:textSize="17dp"/>
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>